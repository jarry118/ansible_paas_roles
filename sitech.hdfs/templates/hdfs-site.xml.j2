<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>dfs.nameservices</name>
        <value>{{ cdh5_dfs_nameservices }}</value>
    </property>

    <property>
        <name>dfs.ha.namenodes.{{ cdh5_dfs_nameservices }}</name>
        <value>{{ hadoop_namenodes_list | join(',') }}</value>
    </property>

<!-- BEGIN: dfs.namenode.rpc-address config -->
{% for host in hadoop_namenodes_list %}
    <property>
      <name>dfs.namenode.rpc-address.{{ cdh5_dfs_nameservices }}.{{ host }}</name>
      <value>{{ host }}:12001</value>
    </property>
{% endfor %}


<!-- BEGIN: dfs.namenode.servicerpc-address config -->
{% for host in hadoop_namenodes_list %}
    <property>
        <name>dfs.namenode.servicerpc-address.{{ cdh5_dfs_nameservices }}.{{ host }}</name>
        <value>{{ host }}:12002</value>
    </property>
{% endfor %}

<!-- BEGIN: dfs.namenode.http-address config -->
{% for host in hadoop_namenodes_list %}
    <property>
      <name>dfs.namenode.http-address.{{ cdh5_dfs_nameservices }}.{{ host }}</name>
      <value>{{ host }}:50070</value>
    </property>
{% endfor %}

    <property>
        <name>dfs.namenode.shared.edits.dir</name>
        <value>qjournal://{{ hadoop_journalnode_list | join(':12007' + ';') }}:12007/{{ cdh5_dfs_nameservices }}</value>
    </property>
    <property>
        <name>dfs.journalnode.edits.dir</name>
        <value>{{ cdh5_dfs_journalnode_edits_dir }}</value>
    </property>
    <property>
